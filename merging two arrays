//1.merge two arrays and store it into third array
#include<stdio.h>
void main()
{
	int arr1[50],arr2[50],size1,size2,i,k,merge[50];
	printf("Enter the size of array1: ");
	scanf("%d", &size1);
	printf("Enter the elements of an array1: ");
	scanf("%d", &size1);
	for(i=0;i<size1;i++)
	{
		scanf("%d",&arr1[i]);
		merge[i]=arr1[i];
	}
	k=i;
	printf("Enter the size of array2: ");
	scanf("%d", &size2);
	printf("Enter the elements of an array2: ");
	scanf("%d", &size2);
	for(i=0;i<size2;i++)
	{
		scanf("%d",&arr1[i]);
		merge[k]=arr1[i];
		k++;
	}
	printf("\nThe third array after merging: \n");
	for(i=0;i<k;i++)
	printf("%d",merge[i]);
	
}
